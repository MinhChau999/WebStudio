// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
  // see commands.ts
  // <output-placeholder-for-migrations>
  output          = "../src/__generated__"
  // </output-placeholder-for-migrations>

  binaryTargets = env("PRISMA_BINARY_TARGET")
}

datasource db {
  provider  = "postgres"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Team {
  id    String @id @default(uuid())
  users User[]
}

enum UploadStatus {
  UPLOADING
  UPLOADED
}

model File {
  name              String       @id
  format            String
  size              Int
  description       String?
  createdAt         DateTime     @default(now()) @db.Timestamptz(3)
  updatedAt         DateTime     @default(now()) @updatedAt @db.Timestamptz(3)
  meta              String       @default("{}")
  status            UploadStatus @default(UPLOADING)
  isDeleted         Boolean      @default(false)
  uploaderProject   Project?     @relation(fields: [uploaderProjectId], references: [id])
  uploaderProjectId String?
  assets            Asset[]
}

model Asset {
  id               String             @default(uuid()) // not unique!
  projectId        String
  file             File               @relation(fields: [name], references: [name])
  name             String
  filename         String?
  description      String?
  Project          Project[]
  DashboardProject DashboardProject[]

  @@id([id, projectId])
}

model User {
  id           String   @id @default(uuid())
  email        String?  @unique
  provider     String?
  image        String?
  username     String?
  createdAt    DateTime @default(now()) @db.Timestamptz(3)
  team         Team?    @relation(fields: [teamId], references: [id])
  teamId       String?
  projects     Project[]
  projectsTags Json     @default("[]")
}

model Project {
  id                  String                       @id @default(uuid())
  createdAt           DateTime                     @default(now()) @db.Timestamptz(3)
  title               String
  // Tag ids used in User.projectTags
  tags                String[]
  user                User?                        @relation(fields: [userId], references: [id])
  userId              String?
  build               Build[]
  isDeleted           Boolean                      @default(false)
  files               File[]
  previewImageAsset   Asset?                       @relation(fields: [previewImageAssetId, id], references: [id, projectId])
  previewImageAssetId String?
  latestStaticBuild   LatestStaticBuildPerProject?

  @@unique([id, isDeleted])
}

model Build {
  id                String   @unique @default(uuid())
  version           Int      @default(0)
  lastTransactionId String?
  createdAt         DateTime @default(now()) @db.Timestamptz(3)
  updatedAt         DateTime @default(now()) @updatedAt @db.Timestamptz(3)

  pages String

  project   Project @relation(fields: [projectId], references: [id])
  projectId String

  breakpoints           String @default("[]")
  styles                String @default("[]")
  styleSources          String @default("[]")
  styleSourceSelections String @default("[]")
  props                 String @default("[]")
  dataSources           String @default("[]")
  resources             String @default("[]")
  instances             String @default("[]")

  latestStaticBuildPerProject LatestStaticBuildPerProject?

  @@id([id, projectId])
  @@index([projectId, createdAt(sort: Desc)])
}

// View representing the latest static build for each project
view LatestStaticBuildPerProject {
  buildId   String
  build     Build    @relation(fields: [buildId, projectId], references: [id, projectId])

  projectId String
  project   Project  @relation(fields: [projectId], references: [id])

  @@id([projectId])
  @@unique([buildId, projectId])
}

// Dashboard view showing non-deleted projects
view DashboardProject {
  id                  String   @id
  createdAt           DateTime @db.Timestamptz(3)
  title               String
  userId              String?
  projectId           String
  previewImageAsset   Asset?   @relation(fields: [previewImageAssetId, id], references: [id, projectId])
  previewImageAssetId String?
  isDeleted           Boolean
}
